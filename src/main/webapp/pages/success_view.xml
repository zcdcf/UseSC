<?xml version="1.0" encoding="UTF-8"?>

<view>
    <header>
        <title>a viewer in MVC</title>
    </header>
    <body>
        <form>
            <name>logoutForm</name>
            <action>logout.action</action>
            <method>post</method>
            <textView>
                <name>userName</name>
                <lable>Login Name:</lable>
                <value>Water</value>
            </textView>
            <textView>
                <name>userAge</name>
                <lable>Age</lable>
                <value>30</value>
            </textView>
            <buttonView>
                <name>logoutButton</name>
                <lable>Logout</lable>
            </buttonView>
        </form>
    </body>
</view>